            @Html.DisplayFor(modelItem => item.Ord_CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ord_ShippedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ord_Status)
        </td>
